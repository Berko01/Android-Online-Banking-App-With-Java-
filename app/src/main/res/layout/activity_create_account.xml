<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <EditText
        android:id="@+id/accountNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Hesap Adı" />

    <EditText
        android:id="@+id/accountTypeEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/accountNameEditText"
        android:layout_marginTop="8dp"
        android:hint="Hesap Türü" />

    <Button
        android:id="@+id/createAccountButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/accountTypeEditText"
        android:layout_marginTop="16dp"
        android:text="Hesap Aç"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
